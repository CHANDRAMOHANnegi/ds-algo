package hackerrank;

import java.io.*;

public class ClimbingLeaderboard {

	static public int removeduplicates(int[] arr) {
		if (arr.length == 0 || arr.length == 1) {
			return arr.length;
		}
		int j = 0;
		for (int i = 0; i < arr.length - 1; i++) {
			if (arr[i] != arr[i + 1]) {
				arr[j++] = arr[i];
			}
		}
		arr[j++] = arr[arr.length - 1];
		return j;
	}

	static int[] climbingLeaderboard(int[] scores, int[] alice) {
		int withoutDuplictelength = removeduplicates(scores);

		int[] result = new int[alice.length];
		int i = 0;
		while (i < alice.length) {
			int position = 1;
			for (int j = 0; j < (withoutDuplictelength); j++) {
				 if (scores[j] <= alice[i]) {
					result[i] = position;
					break;
				} else {
					position++;
					if (j == withoutDuplictelength) {
						result[i] = position;
						break;
					}
				}
				result[i] = position;
			}
			i++;
		}
		return result;
	}

	public static void main(String[] args) throws IOException {

		int[] scores = { 100, 90, 90, 80, 75, 60 };
		int[] scores2 = { 100, 90, 80, 75, 60 };
		int[] alice =   { 50, 65, 77, 90, 102 };
		int[] result = climbingLeaderboard(scores, alice);
		for (int i : result) {
			System.out.println(i);
		}
	}
}
